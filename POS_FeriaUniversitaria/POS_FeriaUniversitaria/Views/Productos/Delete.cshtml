@model POS_FeriaUniversitaria.AccesoDatos.Entidades.Producto

@* Título de la pestaña/encabezado (Layout) para identificar la vista actual. *@
@{
    ViewBag.Title = "Eliminar Producto";
}

@*
    Vista: Delete (Eliminar Producto)
    - Muestra los datos básicos del producto seleccionado.
    - Solicita confirmación antes de ejecutar la eliminación lógica (Activo = 0).
    - Envía un POST seguro a Productos/Delete usando AntiForgeryToken (protección CSRF).
    - El ProductoId viaja oculto (HiddenFor) para identificar qué registro se eliminará.
*@

<style>
    /* ================== FONDO GENERAL DE LA VISTA ================== */

    /* Fondo general para que no se vea la franja blanca inferior */
    body {
        background: linear-gradient(45deg, #3A0B33 0%, #691A5C 100%);
    }

    .container.body-content {
        max-width: 100% !important;
        width: 100%;
        margin: 0;
        padding: 40px 20px;
        background: linear-gradient(135deg, #3A0B33 0%, #691A5C 100%);
        box-sizing: border-box;
    }

        .container.body-content > hr {
            display: none;
        }

        .container.body-content > footer {
            max-width: 950px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 0 0 24px 24px;
            padding: 8px 0 12px 0;
            box-shadow: 0 18px 35px rgba(0, 0, 0, 0.18);
            text-align: center;
            color: #6c757d;
            font-size: 0.9rem;
        }

    /* ================== TARJETA DE CONFIRMACIÓN ================== */

    .producto-delete-wrapper {
        max-width: 950px;
        margin: 0 auto;
    }

    .producto-delete-card {
        background-color: #ffffff;
        border-radius: 24px 24px 0 0;
        padding: 26px 30px 24px 30px;
        box-shadow: 0 18px 35px rgba(0, 0, 0, 0.18);
    }

    .producto-delete-title {
        text-align: center;
        margin-bottom: 4px;
        font-weight: 700;
        color: #691A5C;
    }

    .producto-delete-subtitle {
        text-align: center;
        margin-bottom: 20px;
        color: #6c757d;
    }

    .producto-delete-warning {
        background: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        border-radius: 8px;
        padding: 10px 12px;
        font-size: 0.95rem;
        margin-bottom: 18px;
        text-align: center;
    }

    /* ================== LISTA DE DATOS DEL PRODUCTO ================== */

    .producto-delete-datos {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-row-gap: 10px;
        grid-column-gap: 20px;
        margin-bottom: 24px;
    }

        .producto-delete-datos dt {
            font-weight: 600;
            color: #495057;
        }

        .producto-delete-datos dd {
            margin-left: 0;
            color: #343a40;
            word-break: break-word;
        }

    /* ================== BOTONES ================== */

    .producto-delete-buttons {
        text-align: center;
        margin-top: 10px;
    }

    .btn-eliminar,
    .btn-cancelar {
        display: inline-block;
        min-width: 150px;
        padding: 9px 20px;
        border-radius: 999px;
        border: none;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.2s ease-in-out;
        margin: 0 6px;
    }

    .btn-eliminar {
        background-color: #dc3545;
        color: #ffffff;
    }

        .btn-eliminar:hover {
            background-color: #c82333;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(220, 53, 69, 0.35);
        }

    .btn-cancelar {
        background-color: #e9ecef;
        color: #495057;
    }

        .btn-cancelar:hover {
            background-color: #707070;
            color: #ffffff !important;
            transform: translateY(-1px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
            text-decoration: none;
        }
</style>

@* Contenedor principal: centra la tarjeta blanca sobre el fondo degradado morado. *@
<div class="producto-delete-wrapper">
    <div class="producto-delete-card">
        <h2 class="producto-delete-title">Eliminar producto</h2>
        <p class="producto-delete-subtitle">
            ¿Seguro que deseas eliminar este producto del inventario de la feria universitaria?
        </p>

        <div class="producto-delete-warning">
            Esta acción no afectará pagos reales, solo el registro dentro del mini POS de la feria.
        </div>

        @* Datos del producto: se usan DisplayNameFor/DisplayFor para respetar nombres/formato del modelo. *@
        <dl class="producto-delete-datos">
            <dt>@Html.DisplayNameFor(m => m.Nombre)</dt>
            <dd>@Html.DisplayFor(m => m.Nombre)</dd>

            <dt>@Html.DisplayNameFor(m => m.PrecioVenta)</dt>
            <dd>@Html.DisplayFor(m => m.PrecioVenta)</dd>

            <dt>@Html.DisplayNameFor(m => m.Stock)</dt>
            <dd>@Html.DisplayFor(m => m.Stock)</dd>
        </dl>

        @* Datos del producto: se usan DisplayNameFor/DisplayFor para respetar nombres/formato del modelo. *@
        @using (Html.BeginForm("Delete", "Productos", FormMethod.Post))
        {
            @* Token Anti-CSRF: evita que un tercero ejecute el POST desde otra página. *@
            @Html.AntiForgeryToken()
            @* ID oculto: permite identificar el producto a eliminar sin mostrarlo en pantalla. *@
            @Html.HiddenFor(m => m.ProductoId)

    <div class="producto-delete-buttons">
        @* Submit: al presionar "Eliminar" se ejecuta el POST del formulario. *@
        <input type="submit" value="Eliminar" class="btn-eliminar" />
        @* Cancelar: regresa al listado (Index) sin realizar cambios en la base de datos. *@
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn-cancelar" })
    </div>
        }
    </div>
</div>
