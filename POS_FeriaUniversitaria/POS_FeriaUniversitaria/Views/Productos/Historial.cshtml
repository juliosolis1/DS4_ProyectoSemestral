@model IEnumerable<POS_FeriaUniversitaria.AccesoDatos.Entidades.Producto>

@* Título de la pestaña/encabezado (Layout) para indicar que estamos en Historial. *@
@{
    ViewBag.Title = "Historial de productos";
}

@*
    Vista: Historial de productos
    - Muestra productos activos y los eliminados en los últimos 30 días.
    - Permite dos acciones sobre eliminados: Restaurar o Eliminar definitivamente.
    - Usa formularios POST con AntiForgeryToken para acciones sensibles.
    - La limpieza automática (>30 días) se realiza en la capa de datos (Repositorio).
*@
<style>
    .container.body-content {
        max-width: 100% !important;
        width: 100%;
        margin: 0;
        padding: 40px 20px;
        background: linear-gradient(135deg, #3A0B33 0%, #691A5C 100%);
        box-sizing: border-box;
    }

    .historial-wrapper {
        max-width: 1100px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 24px 24px 0 0;
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.25);
        padding: 30px 36px 26px 36px;
    }

    /* Encabezado */
    .historial-header {
        text-align: center;
        margin-bottom: 18px;
    }

    /* Ajuste final de tamaños (título/subtítulo) para que el encabezado no se vea excesivo en pantalla. */
    .historial-title {
        margin: 0;
        font-size: 1.6rem;
        font-weight: 800;
        color: #5A1048;
    }

    .historial-subtitle {
        margin: 6px 0 0 0;
        font-size: 0.98rem;
        color: #6c757d;
    }

    .historial-divider {
        margin: 24px auto 22px auto;
        height: 3px;
        border: none;
        border-radius: 999px;
        max-width: 820px;
        background: linear-gradient(90deg, #E5C4E5 0%, #F3DFFF 50%, #E5C4E5 100%);
    }

    .historial-table-container {
        width: 100%;
        overflow-x: auto;
    }

    /* Tabla del historial */
    .historial-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
        table-layout: fixed;
    }


        .historial-table thead th {
            background: #F7ECFF;
            color: #5A1048;
            font-weight: 600;
            padding: 10px 14px;
            border-bottom: 2px solid #E4D4F1;
            white-space: normal;
            word-wrap: break-word;
        }

        .historial-table tbody td {
            padding: 9px 14px;
            border-bottom: 1px solid #F0F0F5;
            vertical-align: middle;
        }

        .historial-table tbody tr:nth-child(even) {
            background-color: #FCF8FF;
        }

        .historial-table tbody tr:hover {
            background-color: #F3E9FF;
        }

    /* Columna de acciones algo más estrecha */
    .historial-col-acciones {
        width: 220px;
        text-align: center;
    }

    /* Badge para el estado del producto */
    .estado-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 999px;
        font-size: 0.8rem;
        font-weight: 600;
        letter-spacing: 0.01em;
    }

    .estado-inventario {
        background-color: #E4F7E9;
        color: #1E8545;
    }

    .estado-no-disponible {
        background-color: #FFF1CC;
        color: #9A6A00;
    }

    .estado-eliminado {
        background-color: #FDE0E0;
        color: #B3261E;
    }

    /* Acciones cuando el producto está eliminado */
    .acciones-historial {
        display: inline-flex;
        gap: 8px;
        align-items: center;
        flex-wrap: wrap;
        justify-content: center;
    }

        .acciones-historial form {
            margin: 0;
            display: inline-block;
        }

    /* Botones */
    .btn-editar,
    .btn-restaurar,
    .btn-eliminar-definitivo,
    .btn-volver-inventario {
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.85rem;
        padding: 7px 18px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: all 0.18s ease-in-out;
    }

    .btn-editar {
        background-color: #FFC107;
        color: #ffffff;
    }

        .btn-editar:hover {
            background-color: #E0A800;
            color: #ffffff;
            text-decoration: none;
        }

    .btn-restaurar {
        background-color: #198754;
        color: #ffffff;
    }

        .btn-restaurar:hover {
            background-color: #157347;
            color: #ffffff;
        }

    .btn-eliminar-definitivo {
        background-color: #DC3545;
        color: #ffffff;
        padding: 6px 14px;
        font-size: 0.8rem;
    }

        .btn-eliminar-definitivo:hover {
            background-color: #C82333;
            color: #ffffff;
        }

    .btn-volver-inventario {
        background-color: #F1F1F1;
        color: #444444;
        padding: 9px 22px;
        font-size: 0.9rem;
    }

        .btn-volver-inventario:hover {
            background-color: #E0E0E0;
            color: #111111;
            text-decoration: none;
        }

    /* Sección inferior con el botón "Volver al inventario" */
    .volver-inventario-container {
        margin-top: 18px;
        padding-top: 14px;
        border-top: 1px solid #EEEEF3;
        text-align: center;
    }

    .historial-subtitle {
        font-size: 0.9rem;
    }

    /* --------- Footer integrado al recuadro del historial --------- */

    .container.body-content > hr {
        display: none;
    }

    .container.body-content > footer {
        max-width: 1100px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 0 0 24px 24px;
        padding: 8px 0 12px 0;
        box-shadow: 0 18px 40px rgba(0, 0, 0, 0.25);
        text-align: center;
        color: #6c757d;
        font-size: 0.9rem;
    }
</style>

<div class="historial-wrapper">
    <div class="historial-header">
        <h2 class="historial-title">Historial de productos</h2>
        <p class="historial-subtitle">
            Aquí se muestran los productos activos y los eliminados en los últimos 30 días.
            Los productos inactivos con más de 30 días se eliminan automáticamente de la base de datos.
        </p>
    </div>

    <hr class="historial-divider" />

    <div class="historial-table-container">
        <table class="historial-table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.PrecioVenta)</th>
                    <th>@Html.DisplayNameFor(m => m.Stock)</th>
                    <th>Estado</th>
                    <th>Fecha de creación</th>
                    <th>Fecha de eliminación</th>
                    <th class="historial-col-acciones">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @* Recorre cada producto del historial para construir filas de la tabla y mostrar su estado. *@
                @foreach (var item in Model)
                {
                    @* Define la clase CSS del badge según el estado: eliminado / no disponible (stock 0) / en inventario. *@
                    var estadoClase = !item.Activo
                        ? "estado-eliminado"
                        : (item.Stock <= 0 ? "estado-no-disponible" : "estado-inventario");

                    @* Texto visible del estado que acompaña al badge (mismo criterio de estadoClase). *@
                    var estadoTexto = !item.Activo
                        ? "Eliminado"
                        : (item.Stock <= 0 ? "No disponible" : "En inventario");

                <tr>
                    <td>@item.Nombre</td>
                    @* Formato moneda: "C" muestra el precio según la configuración regional del servidor. *@
                    <td>@item.PrecioVenta.ToString("C")</td>
                    <td>@item.Stock</td>
                    <td>
                        <span class="estado-badge @estadoClase">
                            @estadoTexto
                        </span>
                    </td>
                    <td>
                        @item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                    </td>
                    <td>
                        @* Fecha de eliminación: si no existe (NULL), se muestra "-" para indicar “no aplica”. *@
                        @(item.FechaEliminacion.HasValue
                                ? item.FechaEliminacion.Value.ToString("dd/MM/yyyy HH:mm")
                                : "-")
                    </td>
                    <td class="historial-col-acciones">
                        @* Si el producto está eliminado (Activo = false), se muestran acciones: Restaurar o Eliminar definitivamente. *@
                        @if (!item.Activo)
                        {
                            <div class="acciones-historial">
                                @* Botón RESTAURAR al inventario *@
                                @using (Html.BeginForm(
                                    "Restaurar",
                                    "Productos",
                                    new { id = item.ProductoId },
                                    FormMethod.Post,
                                    new { @class = "form-inline" }))
                                {
                                    @* AntiForgeryToken: protege la acción POST Restaurar contra CSRF. *@
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn-restaurar">
                                        Restaurar
                                    </button>
                                }

                                @* Botón ELIMINAR DEFINITIVAMENTE *@
                                @using (Html.BeginForm(
                                    "EliminarDefinitivo",
                                    "Productos",
                                    new { id = item.ProductoId },
                                    FormMethod.Post,
                                    new
                                    {
                                        @class = "form-inline",
                                        onsubmit = "return confirm('¿Seguro que deseas eliminar definitivamente este producto? Esta acción no se puede deshacer.');"
                                    }))
                                {
                                    @* AntiForgeryToken: protege la acción POST EliminarDefinitivo contra CSRF. *@
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn-eliminar-definitivo">
                                        Eliminar definitivamente
                                    </button>
                                }
                            </div>
                        }
                        else
                        {
                            @* Si el producto está activo, se permite Editar (no se muestran acciones de restauración/borrado físico). *@
                            @Html.ActionLink(
                                "Editar",
                                "Edit",
                                new { id = item.ProductoId },
                                new { @class = "btn-editar" })
                        }
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="volver-inventario-container">
        @Html.ActionLink(
            "Volver al inventario",
            "Index",
            null,
            new { @class = "btn-volver-inventario" })
    </div>
</div>
